.portfolio__header {
    color: #000;
    font-weight: bold;
    margin: 50px 100px;

    @include desktop {
        margin: 50px 0;
    }
}

.portfolio__details {
    display: flex;
    margin-bottom: 100px;
    position: relative;
}

.portfolio__images {
    width: 800px;
    display: flex;
    overflow: hidden;
    margin-left: 100px;
    position: relative;

    @include desktop {
        margin-left: 0;
    }
}

.portfolio__images-thumb {
    position: absolute;
    bottom: 60px;
    left: 12.5rem;
}

.thumb__container {
    width: 150px;
    display: flex;

    img {
        cursor: pointer;
    }
}

.portfolio__image {
    width: 100%;
    flex-shrink: 0;
    transition: .5s;

    &--active {
        border: 3px solid #dc9322;
    }
}

.portfolio__number {
    width: 150px;
    font-size: 20rem;
    color: #e6e6e6;
    font-weight: bolder;
    margin-left: -20px;
}

.portfolio__text {
    width: 240px;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
}

.thumb {

    &:hover {
        border: 3px solid #dc9322;
    }
}

.arrows {
    width: 50px;
    height: 96px;
    background-color: #353e4e;
    position: absolute;
    bottom: 60px;
    left: 56.25rem;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.arrows__cntrls {
    width: 50px;
    height: 50px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.arrow__icon {
    width: 10px;
    height: 13px;
    fill: #727883;

    &--activ {
        fill: #fff;
    }

    &--left {
        transform: rotate(180deg);
    }

    &:hover {
        fill: #fff;
    }
}

.tags__item {
    height: 45px;
    background-color: #f3f5f9;
    border-radius: 15px;
    padding: 10px;
    cursor: pointer;
    color: #85888f;
}

.portfolio__paragraph {
    font-size: 16px;
    font-family: "Open Sans";
    color: rgba(51, 60, 73, 0.702);
    line-height: 1.875;      
}

.site-link {
    font-size: 18px;
    font-family: "Open Sans";
    color: rgb(88, 110, 211);
    font-weight: bold;
    text-align: left;
    text-decoration: none;

    &:hover {
        text-decoration: underline;
    }
}

.site-icon {
    width: 15px;
    height: 15px;
    fill: rgb(88, 110, 211);
    margin-right: 20px;
}